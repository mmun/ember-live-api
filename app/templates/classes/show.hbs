{{log model}}
<h1 class="api-header">
  {{name}} {{#if static}}Namespace{{else}}Class{{/if}}
  {{api-file-link apiItem=this cssClass='edit-page'}}
</h1>

<hr>

{{#if deprecated }}<p>DEPRECATED</p>{{/if}}
{{#if access }}<p>{{accessUpcase}}</p>{{/if}}
<div class="class-info">
  {{#if extends}}<p>Extends: {{api-file-link this}}</p>{{/if}}
  {{#if uses}}
    {{#each use in uses}}
    <p>Uses: {{api-class-link className=use apiStore=apiStore}}</p>
    {{/each}}
  {{/if}}

  {{#if file}}
    <p>Defined in: {{api-file-link apiItem=this}}</p>
  {{/if}}

  {{#if submodule}}
    <p>Module: {{api-module-link moduleName=submodule apiStore=apiStore}}</p>
  {{else}}
    {{#if module}}
      <p>Module: {{api-module-link moduleName=module apiStore=apiStore}}</p>
    {{/if}}
  {{/if}}
</div>

{{#if description}}
  <div class="description">
    {{api-markdown text=description}}
  </div>
{{/if}}

{{#if typesPresent}}
  <div class="tabs">
    <ul>
      <li><a {{action index}}>Index</a></li>
      {{#each type in types}}
        <li><a {{action type}}>{{type}}</a></li>
      {{/each}}
    </ul>
    <div class="pane" id="index">
      {{partial 'apiOptions'}}
      {{class-items-listing classitems=methods}}
      {{class-items-listing classitems=properties}}
      {{class-items-listing classitems=events}}
    </div>
    {{#each type in types}}
    {{/each}}
  </div>
{{/if}}
{{!
  <% types.each do |type| %>
    <div class="pane" id="<%= type.pluralize %>">
      <%= partial "api_options" %>
      <% @class.classitems[type].sort.each do |(name, data)| %>
        <%= partial "api/item", :locals => { :item => data, :type => type } %>
      <% end %>
    </div>
  <% end %>
}}
